{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "declaration": true,
        "outDir": "./lib/",
        "rewriteRelativeImportExtensions": true,
        "esModuleInterop": true,
        "rootDirs": [
            "./src"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}